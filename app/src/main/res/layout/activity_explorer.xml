<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/explorer_tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_text_medium"
        android:gravity="center"
        android:text="标题"
        android:textSize="30sp"/>

    <TextView
        android:background="@color/choose_button_select"
        android:id="@+id/explorer_tv_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>

    <com.lfk.justwetools.View.FileExplorer.FileExplorer
        android:layout_margin="5dp"
        android:id="@+id/explorer_explorer"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dp"/>

</LinearLayout>
